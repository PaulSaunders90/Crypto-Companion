<% include partials/header %>

<div class="generalcontainer">
    <div id="formcontainer">
        <form id="contact" action="" method="post">
            <h3>Suggest a Feature or Report a Bug!</h3>
            <h4>How Can We Improve?</h4>
            <fieldset>
                <input placeholder="Your name" name="name" type="text" required>
            </fieldset>
            <fieldset>
                <input placeholder="Your Email Address" name="email" type="email" required>
            </fieldset>
            <fieldset>
                <input placeholder="Relevant Page" name="page" type="text" required>
            </fieldset>
            <fieldset>
                <textarea placeholder="Type your message here...." name="message" required></textarea>
            </fieldset>
            <fieldset>
                <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
            </fieldset>
        </form>
    </div>
</div>

<% include partials/footer %>